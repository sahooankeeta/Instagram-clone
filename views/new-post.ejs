<div class="new-post hide">
  <form
    action="/posts/create"
    enctype="multipart/form-data"
    class="new-post-container"
    method="POST"
  >
    <input type="file" name="image" />
    <textarea
      name="caption"
      placeholder="Write a caption"
      class="new-post-caption"
    ></textarea>
    <input class="new-post-submit" type="submit" value="Share" />
  </form>
</div>
