<div class="post-dialog">
  <div class="post-header">
    <a href="#"
      ><img class="post-header-image" src="/image/default-user.jpg"
    /></a>
    <a class="post-header-name" href="#"><b><%=post.user.username%></b></a>
    <div class="post-header-more">
      <svg class="post-header-more-icon">
        <use xlink:href="/image/sprite.svg#icon-circle-with-cross"></use>
      </svg>
    </div>
  </div>
  <img src="<%= post.image%>" alt="" class="post-image" />

  <div class="post-content">
    <div class="post-comments">
      <div class="post-comment">
        <a href="#">
          <img class="post-comment-user" src="/image/profile-pic.jpg" />
        </a>

        <p class="post-comment-body">
          <a href="#" class="post-comment-username"><%=post.user.username%></a>
          <span class="post-comment-content"><%=post.caption%></span>
        </p>
        <a class="post-comment-like" href="#">
          <svg>
            <use xlink:href="/image/sprite.svg#icon-heart-outlined"></use>
          </svg>
        </a>
        <a class="post-comment-delete" href="#">
          <svg>
            <use xlink:href="/image/sprite.svg#icon-circle-with-cross"></use>
          </svg>
        </a>
      </div>
